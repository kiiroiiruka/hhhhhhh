        <!-- ******************************************************************************************** -->
        <!-- TRANSPORT CONTROLS -->
        <!-- ******************************************************************************************** -->

		<Control name="record" options="receive"> <MidiMessage status="Controller" address="#1A"/> </Control>

		<Control name="rewind" options="receive"> <MidiMessage status="Controller" address="#16"/> </Control>

		<Control name="ff" options="receive"> <MidiMessage status="Controller" address="#17"/> </Control>

