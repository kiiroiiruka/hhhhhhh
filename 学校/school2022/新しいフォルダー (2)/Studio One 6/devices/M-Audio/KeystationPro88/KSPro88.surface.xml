	</Controls>

	<!-- ******************************************************************************************** -->
	<!-- SURFACE MAPPINGS -->
	<!-- ******************************************************************************************** -->

	<Mappings>
		
        <!-- ******************************************************************************************** -->
        <!-- MIXER MAPPING -->
        <!-- ******************************************************************************************** -->

		<DeviceMapping device="MixerConsole">
			<Bank target="RemoteBank" pagesize="8">
				<!-- The Channel Strips -->
				<foreach variable="$channel" count="8">
					<Strip> 
						<Value control="fader[$channel]"  param="volume"/>
						<Value control="knob[$channel]"   param="pan"/>
						<Value control="button[$channel]" param="mute"/>
					</Strip>
				</foreach>
			</Bank>
			<Bank target="MasterBank">
				<Strip>
					<Value control="fader[8]" param="volume"/>
				</Strip>
			</Bank>
		</DeviceMapping>
		
        <!-- ******************************************************************************************** -->
        <!-- TRANSPORT MAPPING -->
        <!-- ******************************************************************************************** -->

		<DeviceMapping device="TransportPanel">

			<Toggle control="play"   param="start"/>
			<Toggle control="stop"   param="stop"/>
			<Toggle control="record" param="record"/>
			<Touch  control="ff"     param="fastForward"/>
			<Touch  control="rewind"    param="rewind"/>

		</DeviceMapping>
		
		<!-- ******************************************************************************************** -->
        <!-- METRONOME MAPPING -->
        <!-- ******************************************************************************************** -->

		<DeviceMapping device="Metronome">
			<Value control="button[8]" param="clickOn"/>
		</DeviceMapping>

	</Mappings>

</ControlSurface>