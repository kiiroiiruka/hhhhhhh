					<Value control="recordLED[3]"  param="value" options="above"/>
				</Strip>
				<Strip name="recordButton[4]">
					<Toggle control="recordButton[4]" param="value" options="above"/>
					<Value control="recordLED[4]"  param="value" options="above"/>
				</Strip>
				<Strip name="recordButton[5]">
					<Toggle control="recordButton[5]" param="value" options="above"/>
					<Value control="recordLED[5]"  param="value" options="above"/>
				</Strip>
				<Strip name="recordButton[6]">
