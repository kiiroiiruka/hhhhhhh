        <!-- GENERIC MAPPING (used for "on the fly" control assignment) -->
        <!-- ******************************************************************************************** -->

		<GenericMapping>
			<Bank>
				<Strip name="vpot[0]">
					<Relative control="vpot[0]"  param="value"/>
				</Strip>
				<Strip name="vpot[1]">
					<Relative control="vpot[1]"  param="value"/>
				</Strip>
				<Strip name="vpot[2]">
					<Relative control="vpot[2]"  param="value"/>
				</Strip>
				<Strip name="vpot[3]">
					<Relative control="vpot[3]"  param="value"/>
				</Strip>
				<Strip name="vpot[4]">
					<Relative control="vpot[4]"  param="value"/>
				</Strip>
				<Strip name="vpot[5]">
					<Relative control="vpot[5]"  param="value"/>
				</Strip>
				<Strip name="vpot[6]">
					<Relative control="vpot[6]"  param="value"/>
				</Strip>
				<Strip name="vpot[7]">
					<Relative control="vpot[7]"  param="value"/>
				</Strip>


				<Strip name="recordButton[0]">
					<Toggle control="recordButton[0]" param="value" options="above"/>
					<Value control="recordLED[0]"  param="value" options="above"/>
				</Strip>
				<Strip name="recordButton[1]">
					<Toggle control="recordButton[1]" param="value" options="above"/>
					<Value control="recordLED[1]"  param="value" options="above"/>
				</Strip>
				<Strip name="recordButton[2]">
					<Toggle control="recordButton[2]" param="value" options="above"/>
					<Value control="recordLED[2]"  param="value" options="above"/>
				</Strip>
				<Strip name="recordButton[3]">
