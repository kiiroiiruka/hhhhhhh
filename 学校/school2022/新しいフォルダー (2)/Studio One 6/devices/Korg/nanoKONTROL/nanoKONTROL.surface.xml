	<!-- ******************************************************************************************** -->
	<!-- SURFACE MAPPINGS -->
	<!-- ******************************************************************************************** -->

	<Mappings>
        <!-- ******************************************************************************************** -->
        <!-- MIXER MAPPING -->
        <!-- ******************************************************************************************** -->

		<DeviceMapping device="MixerConsole">
			<PlacementBank target="RemoteBank" pagesize="8">
				<!-- The Channel Strips -->
				<foreach variable="$channel" count="8">
					<Strip> 
						<Value control="fader[$channel]"         param="volume"/>
						<Value control="encoder[$channel]"       param="pan"/>
						<Toggle control="buttonA[$channel]"      param="solo"/>
						<Toggle control="buttonB[$channel]"      param="mute"/>
					</Strip>
				</foreach>
			</PlacementBank>
			<!-- Master Strip -->
			<Bank target="MasterBank">
				<Strip>
					<Value control="fader[8]" param="volume"/>
					<Toggle control="buttonA[8]" param="solo"/>			
					<Toggle control="buttonB[8]" param="mute"/>
				</Strip>
			</Bank>		

		</DeviceMapping>
		

        <!-- ******************************************************************************************** -->
        <!-- TRANSPORT MAPPING -->
        <!-- ******************************************************************************************** -->

		<DeviceMapping device="TransportPanel">

			<Toggle control="loopButton" param="loop"/>

			<Toggle control="playButton"  param="start"/>
						
			<Toggle control="stopButton"  param="stop"/>

		    <Toggle control="recordButton" param="record"/>		

			<Touch control="ffButton"      param="fastForward"/>				
			
			<Touch control="rewindButton"  param="rewind"/>

		</DeviceMapping>		
		
	</Mappings>

</ControlSurface>