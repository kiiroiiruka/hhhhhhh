				</Control>

				<!-- PCR Value Encoder-->
				<Control name="dial" title="[VALUE]" type="relative" options="receive">
					<MidiMessage status="#B0" channel="8" address="#53" options="signed"/>
				</Control>

				<!-- PCR V-Link Transport Controls -->
				<Control name="RTZButton" title="[L1]" type="button" options="receive">
					<MidiMessage status="#B0" channel="8" address="#52"/>
				</Control>
				<Control name="stopButton" title="[L2]" type="button" options="receive">
					<MidiMessage status="#B0" channel="13" address="#52"/>
				</Control>
				<Control name="playButton" title="[L3]" type="button" options="receive">
					<MidiMessage status="#B0" channel="14" address="#52"/>
				</Control>
				<Control name="recordButton" title="[L4]" type="button" options="receive">
					<MidiMessage status="#B0" channel="10" address="#52"/>
				</Control>

		</Controls>

    <!-- ******************************************************************************************** -->
    <!-- SURFACE MAPPINGS -->
    <!-- ******************************************************************************************** -->


	<Mappings>
		

		<!-- ******************************************************************************************** -->
        <!-- GLOBAL MAPPING -->
        <!-- ******************************************************************************************** -->

		<Global>

			<Command control="ButtonC[0]"  command.category="Event"             command.name="Quantize"/>
			<Command control="ButtonC[1]"  command.category="Edit"              command.name="Delete"/>
			<Command control="ButtonC[2]"  command.category="Track"             command.name="Solo"/>
		
		</Global>
        
		

        <!-- ******************************************************************************************** -->
        <!-- TRANSPORT MAPPING -->
        <!-- ******************************************************************************************** -->

        <DeviceMapping device="TransportPanel">

          

		<!--	<Relative control="dial" param="freeCursorTime"/> -->

            <Toggle control="playButton"   param="start"/>
            <Toggle control="stopButton"   param="stop"/>
            <Toggle control="recordButton" param="record"/>
            <Touch  control="RTZButton"    param="returnToZero"/>

        </DeviceMapping>

    </Mappings>

</ControlSurface>
