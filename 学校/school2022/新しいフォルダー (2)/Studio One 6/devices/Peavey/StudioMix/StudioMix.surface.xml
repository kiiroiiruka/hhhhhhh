		<Control name="button[0]" title="B1" options="receive">
			<MidiMessage status="NRPN" address="2500" resolution="2" options="reversed"/>
		</Control>	
		
		<Control name="button[1]" title="B2" options="receive">
			<MidiMessage status="NRPN" address="2501" resolution="2" options="reversed"/>
		</Control>	

		<Control name="button[2]" title="B3" options="receive">
			<MidiMessage status="NRPN" address="2502" resolution="2" options="reversed"/>
		</Control>	

		<Control name="button[3]" title="B4" options="receive">
			<MidiMessage status="NRPN" address="2503" resolution="2" options="reversed"/>
		</Control>	

		<Control name="button[4]" title="B5" options="receive">
			<MidiMessage status="NRPN" address="2504" resolution="2" options="reversed"/>
