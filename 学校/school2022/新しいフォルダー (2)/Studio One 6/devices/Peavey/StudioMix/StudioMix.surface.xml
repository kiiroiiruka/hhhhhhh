		<Control name="fader[7]" title="Fader 8" options="receive transmit nofeedback">
			<MidiMessage status="NRPN" address="3507" channel="15"/>
		</Control>	

		<Control name="masterFader" title="Fader M" options="receive transmit nofeedback">
			<MidiMessage status="NRPN" address="4503" channel="15"/>
		</Control>	

        <!-- ******************************************************************************************** -->
        <!-- 5 x AUX BUTTON -->
        <!-- ******************************************************************************************** -->

		<Control name="auxButton[0]" title="Button 1" options="receive">
			<MidiMessage status="NRPN" address="5000" resolution="2" options="reversed"/>
		</Control>	
		
		<Control name="auxButton[1]" title="Button 2" options="receive">
			<MidiMessage status="NRPN" address="5001" resolution="2" options="reversed"/>
		</Control>	

		<Control name="auxButton[2]" title="Button 3" options="receive">
			<MidiMessage status="NRPN" address="5002" resolution="2" options="reversed"/>
		</Control>	

		<Control name="auxButton[3]" title="Button 4" options="receive">
			<MidiMessage status="NRPN" address="5003" resolution="2" options="reversed"/>
		</Control>	

		<Control name="auxButton[4]" title="Button 5" options="receive">
			<MidiMessage status="NRPN" address="5004" resolution="2" options="reversed"/>
		</Control>	

        <!-- ******************************************************************************************** -->
        <!-- TRANSPORT BUTTONS -->
        <!-- ******************************************************************************************** -->

		<Control name="rewindButton" title="Rewind" options="receive">
			<MidiMessage status="NRPN" address="6000" resolution="2" options="reversed"/>
		</Control>	
		
		<Control name="ffButton" title="FF" options="receive">
			<MidiMessage status="NRPN" address="6001" resolution="2" options="reversed"/>
		</Control>	

		<Control name="playButton" title="Play" options="receive">
			<MidiMessage status="NRPN" address="6003" resolution="2" options="reversed"/>
		</Control>	

		<Control name="stopButton" title="Stop" options="receive">
			<MidiMessage status="NRPN" address="6002" resolution="2" options="reversed"/>
		</Control>	

		<Control name="recordButton" title="Record" options="receive">
			<MidiMessage status="NRPN" address="6004" resolution="2" options="reversed"/>
		</Control>
		
		<Control name="mmcButton" title="Internal/MMC" options="receive">
			<MidiMessage status="NRPN" address="6005" resolution="2" options="reversed"/>
		</Control>

        <!-- ******************************************************************************************** -->
        <!-- WHEEL AND SHUTTLE-->
        <!-- ******************************************************************************************** -->

		<Control name="wheel" title="Jog" options="receive">
			<MidiMessage status="NRPN" address="7000" options="reversed"/>
		</Control>	
		
		<Control name="shuttle" title="Shuttle" options="receive">
			<MidiMessage status="NRPN" address="7001" options="reversed"/>
		</Control>
		
	</Controls>	
	
	<!-- ******************************************************************************************** -->
	<!-- SURFACE MAPPINGS -->
	<!-- ******************************************************************************************** -->

	<Mappings>

 		<!-- ******************************************************************************************** -->
        <!-- WINDOW MAPPING -->
        <!-- ******************************************************************************************** -->

		<DeviceMapping device="WindowManager">

			<Toggle control="auxButton[0]" param="MixerConsole"/>

		</DeviceMapping>
		
		<!-- ******************************************************************************************** -->
        <!-- MIXER MAPPING -->
        <!-- ******************************************************************************************** -->

		<DeviceMapping device="MixerConsole">
			<PlacementBank target="RemoteBank" pagesize="8">
				<!-- The Channel Strips -->
				<foreach variable="$channel" count="8">
					<Strip> 
						<Value    control="fader[$channel]"    param="volume"/>
						<Relative control="encoderB[$channel]" param="pan"/>
						<Toggle   control="button[$channel]"   param="recordArmed"/>
					</Strip>
				</foreach>
				<ScrollButton control="auxButton[3]" direction="pageleft"/>
				<ScrollButton control="auxButton[4]" direction="pageright"/>	
			</PlacementBank>
			
			<!-- Master Strip -->
			<Bank target="MasterBank">
				<Strip>
					<Value  control="masterFader" param="volume"/>
					<Toggle control="button[8]"   param="mute"/>				
				</Strip>
			</Bank>
		</DeviceMapping>
		
        <!-- ******************************************************************************************** -->
        <!-- TRANSPORT MAPPING -->
        <!-- ******************************************************************************************** -->		

		<DeviceMapping device="TransportPanel">
		
			<Relative control="wheel"      param="freeCursorTime"/>
		
			<Toggle control="mmcButton"    param="loop"/>

			<Touch control="ffButton"      param="fastForward"/>
				
			<Touch control="rewindButton"  param="rewind"/>
			
			<Toggle control="stopButton"   param="stop"/>
			
			<Toggle control="playButton"   param="start"/>
			
			<Toggle control="recordButton" param="record"/>							

		</DeviceMapping>
	</Mappings>		
		
</ControlSurface>