		<Control name="fader[0]" title="Fader 1" options="receive transmit nofeedback">
			<MidiMessage status="NRPN" address="3500" channel="15"/>
		</Control>	
		
		<Control name="fader[1]" title="Fader 2" options="receive transmit nofeedback">
			<MidiMessage status="NRPN" address="3501" channel="15"/>
		</Control>	

		<Control name="fader[2]" title="Fader 3" options="receive transmit nofeedback">
			<MidiMessage status="NRPN" address="3502" channel="15"/>
		</Control>	

		<Control name="fader[3]" title="Fader 4" options="receive transmit nofeedback">
			<MidiMessage status="NRPN" address="3503" channel="15"/>
		</Control>	

		<Control name="fader[4]" title="Fader 5" options="receive transmit nofeedback">
			<MidiMessage status="NRPN" address="3504" channel="15"/>
		</Control>	

		<Control name="fader[5]" title="Fader 6" options="receive transmit nofeedback">
			<MidiMessage status="NRPN" address="3505" channel="15"/>
		</Control>	

		<Control name="fader[6]" title="Fader 7" options="receive transmit nofeedback">
			<MidiMessage status="NRPN" address="3506" channel="15"/>
