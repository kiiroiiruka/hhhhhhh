	<!-- ******************************************************************************************** -->

	<Mappings>
        <!-- ******************************************************************************************** -->
        <!-- MIXER MAPPING -->
        <!-- ******************************************************************************************** -->


		<DeviceMapping device="MixerConsole">
			<PlacementBank target="RemoteBank" pagesize="8">
				<!-- The Channel Strips -->
				<foreach variable="$channel" count="8">
					<Strip> 
						<Value control="encoderV[$channel]"      param="volume"/>
						<Value control="encoder[$channel]"       param="pan"/>
						<Value control="encoderButton[$channel]" param="solo"/>
						<Value control="buttonA[$channel]"       param="mute"/>
						<Value control="buttonB[$channel]"       param="recordArmed"/>
					</Strip>
				</foreach>
			</PlacementBank>
		</DeviceMapping>

	</Mappings>

