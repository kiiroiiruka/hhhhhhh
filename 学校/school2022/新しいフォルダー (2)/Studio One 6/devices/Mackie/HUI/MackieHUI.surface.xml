					<Command control="down"  command.category="Navigation" command.name="Down"  options="autorepeat"/>
					<Command control="left"  command.category="Navigation" command.name="Left"  options="autorepeat"/>
					<Command control="right" command.category="Navigation" command.name="Right" options="autorepeat"/>	
				</Group>
				
				<!-- [Zoom] pressed -->
				<Group>
					<Command control="up"    command.category="Zoom" command.name="Zoom Out Vertical"/>
					<Command control="down"  command.category="Zoom" command.name="Zoom In Vertical"/>
					<Command control="left"  command.category="Zoom" command.name="Zoom Out"/>
					<Command control="right" command.category="Zoom" command.name="Zoom In"/>	
				</Group>
			</Variant>

			<Command control="footSwitch1"	command.category="Transport" command.name="Toggle Start"/>
			<Command control="footSwitch2"	command.category="Transport" command.name="Record"/>

			<Command control="editPaste"	command.category="Edit" command.name="Paste"/>
			<Command control="editCut"		command.category="Edit" command.name="Cut"/>
			<Command control="editCapture"	command.category="Edit" command.name="Select"/>
			<Command control="editDelete"	command.category="Edit" command.name="Delete"/>
			<Command control="editCopy"		command.category="Edit" command.name="Copy"/>
			<Command control="editSplit"	command.category="Edit" command.name="Split at Cursor"/>
			
			<Command control="NumPad Enter"  command.category="Navigation" command.name="Enter"/>

			<Variant control="shift">
				<!-- [Shift] not pressed -->
				<Group>
					<Command control="undo" command.category="Edit" command.name="Undo"/>				
					<Command control="save" command.category="File" command.name="Save"/>
					<Command control="tool" command.category="Toolbar" command.name="Next Tool"/>
					<Command control="editMode" command.category="Toolbar" command.name="Previous Tool"/>
				</Group>
				
				<!-- [Shift] pressed -->
				<Group>
					<Command control="undo" command.category="Edit" command.name="Redo"/>
					<Command control="save" command.category="File" command.name="Save As"/>					
				</Group>
			</Variant>
			
			<!-- ******************************************************************************************** -->
			<!-- Script interaction -->
			<!-- ******************************************************************************************** -->

			<String control="selectText" param="assignMode"/>
			
			<Radio control="pan" 		param="assignMode" value="0"/> <!-- kPanMode -->
			<Radio control="panLED"		param="assignMode" value="0"/>
			
			<Radio control="sendA"		param="assignMode" value="1"/> <!-- kSendModeA -->
			<Radio control="sendALED"	param="assignMode" value="1"/>
			
			<Radio control="sendB"		param="assignMode" value="2"/> <!-- kSendModeB -->
			<Radio control="sendBLED"	param="assignMode" value="2"/>

			<Radio control="sendC" 		param="assignMode" value="3"/> <!-- kSendModeC -->
			<Radio control="sendCLED"	param="assignMode" value="3"/>

			<Radio control="sendD" 		param="assignMode" value="4"/> <!-- kSendModeD -->
			<Radio control="sendDLED"	param="assignMode" value="4"/>

			<Radio control="sendE" 		param="assignMode" value="5"/> <!-- kSendModeE -->
			<Radio control="sendELED"	param="assignMode" value="5"/>
			
			<Radio control="assignIn" 		param="assignMode" value="6"/> <!-- kInputMode -->
			<Radio control="assignInLED"	param="assignMode" value="6"/>

			<Radio control="assignOut" 		param="assignMode" value="7"/> <!-- kOutputMode -->
			<Radio control="assignOutLED"	param="assignMode" value="7"/>
			
			<Value control="bypassLED" param="bypassMode"/> <!-- Bypass LED (always on) -->
									
			<!-- Channel strips connected to alias parameters -->
			<foreach variable="$ch" count="8">
				<String control="textCell[$ch]"			param="labelString$ch"/>
				<String control="editorCell[$ch]"		param="editorString$ch"/> <!-- for editor -->

				<Relative control="vpot[$ch]"           param="potValue$ch"/>
				<Value control="ledRing[$ch]"           param="potValue$ch"/>
				<DefaultValue control="vpotSelect[$ch]" param="potValue$ch"/>
			</foreach>
						
		</Global>
        
		<!-- ******************************************************************************************** -->
        <!-- MIXER MAPPING -->
        <!-- ******************************************************************************************** -->

		<DeviceMapping device="MixerConsole" name="MixerMapping">
			<!-- 8 Channel Strips -->
			<PlacementBank target="RemoteBank" pagesize="8" name="ChannelBankElement">
				<foreach variable="$ch" count="8">
					<Strip onConnect="onConnectChannel($ch)"> 
						<!-- Sends (used for script interaction) -->
						<Bank target="Sends" name="SendsBankElement">
							<foreach variable="$sendIndex" count="5">
								<Strip onConnect="onConnectChannelSend($ch,$sendIndex)"/>
							</foreach>
						</Bank>
									
						<Value control="fader[$ch]"				param="volume"/>
						<Touch control="faderTouch[$ch]"		param="volume"/>
													
						<!-- Note: pots + displays are connected to alias parameters -->

						<Value control="meter[$ch][0]"          param="level1"/>
						<Value control="meter[$ch][1]"          param="level2"/>
						<Value control="stereo[$ch]"            param="stereo"/>

						<Toggle control="record[$ch]"           param="recordArmed"/>
						<Toggle control="solo[$ch]"             param="solo" options="momentary"/>
						<Toggle control="mute[$ch]"             param="mute" options="momentary"/>
						<Toggle control="select[$ch]"           param="selected"/>
						
						<using device="Inserts">
							<Toggle control="insert[$ch]"       param="bypassAll"/>
							<Value control="hasInserts[$ch]"    param="hasSlots"/>
						</using>
					</Strip>
				</foreach>

				<!-- Bank Scroll Buttons -->
				<ScrollButton control="channelLeft"  direction="stepleft"/>
				<ScrollButton control="channelRight" direction="stepright"/>
				<ScrollButton control="bankLeft"     direction="pageleft"/>
				<ScrollButton control="bankRight"    direction="pageright"/>				
			</PlacementBank>
			
			
			<!-- Automation Modes for the selected channel -->			
			<ScrollBank target="FollowBank" pagesize="1" name="MixerAutomation">
				<Strip> 
					<!-- Automation Mode -->
					<!--				
					<Radio control="trim"			param="automationMode" value="5"/>
					<Radio control="trimLED"		param="automationMode" value="5"/>
					-->
					<Radio control="off"		    param="automationMode" value="0"/>
					<Radio control="offLED"		    param="automationMode" value="0"/>
					
					<Radio control="read"		    param="automationMode" value="1"/>
					<Radio control="readLED"		param="automationMode" value="1"/>

					<Radio control="touch"			param="automationMode" value="2"/>
					<Radio control="touchLED"		param="automationMode" value="2"/>

					<Radio control="latch"			param="automationMode" value="3"/>
					<Radio control="latchLED"		param="automationMode" value="3"/>
					
					<Radio control="write"			param="automationMode" value="4"/>
					<Radio control="writeLED"		param="automationMode" value="4"/>
					
				</Strip>
			</ScrollBank>
			
			<Value  control="anysoloLED"     param="anySolo"/>
		</DeviceMapping>

        <!-- ******************************************************************************************** -->
        <!-- TRANSPORT MAPPING -->
        <!-- ******************************************************************************************** -->

		<DeviceMapping device="TransportPanel">

			<Radio control="timecodeLED"		param="primaryTimeFormat" value="3"/>
			<Radio control="feetLED"			param="primaryTimeFormat" value="5"/>
			<Radio control="beatLED"			param="primaryTimeFormat" value="2"/>

			<Segmented control="timeCode" param="primaryTime"/>
							
			<Relative control="wheel"  param="freeCursorTime"/>
		
			<Command control="cycle"   command.category="Transport" command.name="Toggle Loop"/>
			<Value control="cycleLED"  param="loop"/>

			<Command control="pre"     command.category="Transport" command.name="Preroll"/>
			<Value  control="preLED"   param="preroll"/>
			
			<Command control="in"      command.category="Transport" command.name="Autopunch"/>
			<Value  control="inLED"    param="punch"/>
			<Command control="out"	   command.category="Transport" command.name="Autopunch"/>
			<Value  control="outLED"   param="punch"/>

			<Command control="play"    command.category="Transport" command.name="Start"/>
			<Value control="playLED"   param="start"/>
						
			<Command control="stop"    command.category="Transport" command.name="Stop"/>
			<Value control="stopLED"   param="stop"/>
			
			<Command control="rtz"     command.category="Transport" command.name="Return to Zero"/>

			<Command control="end"     command.category="Transport" command.name="Goto Loop End"/>
			
			<Toggle control="record"   param="record"/>
			<Value control="recordLED" param="record"/>
			
			<Touch control="rewind"    param="rewind"/>			
			<Value control="rewindLED" param="rewind"/>
			
			<Touch control="ff"        param="fastForward"/>					
			<Value control="ffLED"     param="fastForward"/>				

		</DeviceMapping>

	</Mappings>

</ControlSurface>
